<h1 class="my-3 text-center">Categories</h1>
<div class="flickr_pagination mb-2">
    <%= will_paginate @categories, container: false %>
</div>
<div class="container">
  <div class="row d-flex">
		<% @categories.each do |category| %>
				<div class="col-4 text-center">
					<div class="card text-center shadow mb-5 bg-white rounded">
						<div class="card-body">
							<h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-dark" %></h5>
							<span class="text-secondary"><%= pluralize(category.articles.count, "article")%> of this category</span>
						</div>
						<div class="card-footer text-muted">
							<small>Created <%= time_ago_in_words(category.created_at) %>, and edited <%= time_ago_in_words(category.updated_at) %></small>
						</div>
					</div>
				</div>
		<% end %>
  </div>
</div>
<div class="flickr_pagination mb-2">
    <%= will_paginate @categories, container: false %>
</div>

