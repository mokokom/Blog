<div class="row d-flex justify-content-center">
	<div class="col-8">
		<%= render "shared/errors", record: @user %>
		<%= form_with model: @user, class: "shadow p-3 mb-3 bg-white rounded", local: true do |f|%>
			<div class="form-group">
				<%= f.label :username, class: "col-form-label" %> 
				<%= f.text_field :username , class: "form-control shadow rounded border-0 p-3", placeholder: "Enter your username"%>
			</div>
			<div class="form-group">
				<%= f.label :email, class: "col-form-label" %> </br>
				<%= f.email_field :email, class: "form-control shadow rounded border-0 p-3", placeholder: "Enter your email" %>
			</div>
			<div class="form-group">
				<%= f.label :password, class: "col-form-label" %> </br>
				<%= f.password_field :password, class: "form-control shadow rounded border-0 p-3", placeholder: "Choose your password" %>
			</div>
			<div class="form-group d-flex justify-content-between align-items-center">
				<%= link_to "[ Return to articles listing ]", articles_path, class: "text-left text-dark" %>
				<%= f.submit(@user.new_record? ? "Register" : "Update account" , class: "btn btn-outline-dark") %>
			</div>
		<% end %>
	</div>
</div>
