<div class="row d-flex justify-content-center">
	<div class="col-8">
		<%= render "/shared/errors" %>
		<%= form_with model: @article, class: "shadow p-3 mb-3 bg-white rounded", local: true do |f|%>
			<div class="form-group">
				<%= f.label :title, class: "col-form-label" %> 
				<%= f.text_field :title , class: "form-control shadow rounded border-0 p-3", placeholder: "Article title"%>
			</div>
			<div class="form-group">
				<%= f.label :description, class: "col-form-label" %> </br>
				<%= f.text_area :description, rows: 10, class: "form-control shadow rounded border-0 p-3", placeholder: "Article description" %>
			</div>
			<div class="form-group d-flex justify-content-between align-items-center">
				<%= link_to "[ Return to articles listing ]", articles_path, class: "text-left text-dark" %>
				<%= f.submit class: "btn btn-dark" %>
			</div>
		<% end %>
	</div>
</div>



