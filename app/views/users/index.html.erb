<h1 class="my-3 text-center">mokobloggers</h1>
<div class="container">
  <% @users.each do |user| %>
    <div class="row d-flex justify-content-center">
      <div class="col-8 text-center">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, user_path(user) %>
          </div>
          <div class="card-body">
						<h5 class="card-title">
							<%= gravatar_for user, size: 200 %>
						</h5>
						<p class="card-text"><%= user.articles.any? ? pluralize(user.articles.count, "article") : "#{user.username.capitalize} has no article yet"%></p>
            <%= link_to "View profile", user_path(user), class: "btn btn-outline-success" %>
            <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
